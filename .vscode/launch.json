  "version": "0.2.0",
  "configurations": [
    {
      "name": "STP-Server",
      "type": "node",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}\\server/build/main.js",
      "outFiles": [
        "${workspaceFolder}/server/build/**/*.js"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "restart": true,
      "runtimeExecutable": "nodemon"
    }
  ]
}
